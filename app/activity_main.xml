<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Configuração de Largura Mínima (DPI)"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/edit_dpi_manual"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Insira o valor DPI (Ex: 700)"
        android:inputType="number"
        android:maxLength="4"
        android:textSize="18sp"
        android:padding="12dp"
        android:background="@android:drawable/editbox_background"/>

    <Button
        android:id="@+id/btn_modo_computador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Modo Computador (800 DPI)"
        android:layout_marginTop="24dp"
        android:backgroundTint="#00796B"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/btn_aplicar_dpi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aplicar DPI Personalizado"
        android:layout_marginTop="16dp"
        android:backgroundTint="#1976D2"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/btn_reiniciar_dpi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reiniciar (DPI Padrão de Fábrica)"
        android:layout_marginTop="32dp"
        android:backgroundTint="#D32F2F"
        android:textColor="@android:color/white"/>
        
    <TextView
        android:id="@+id/text_aviso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="#E65100"
        android:text="Aviso: DPI fora da faixa segura (300-1000) será ajustado automaticamente."/>

</LinearLayout>
